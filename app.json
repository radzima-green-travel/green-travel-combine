{
  "expo": {
    "name": "Radzima",
    "slug": "radzima",
    "scheme": "radzima",
    "userInterfaceStyle": "automatic",
    "ios": {
      "appStoreUrl": "https://apps.apple.com/ru/app/radzima/id1587158874",
      "publishBundlePath": "./build",
      "supportsTablet": true,
      "requireFullScreen": true,
      "userInterfaceStyle": "automatic",
      "splash": {
        "image": "src/assets/splash/SplashLight.png",
        "resizeMode": "cover",
        "backgroundColor": "#ffffff",
        "dark": {
          "image": "src/assets/splash/SplashDark.png",
          "resizeMode": "cover",
          "backgroundColor": "#1F1F1F"
        }
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "androidStatusBar": {
      "hidden": true
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "playStoreUrl": "https://play.google.com/store/apps/details?id=app.radzima",
      "publishBundlePath": "./build",
      "userInterfaceStyle": "automatic",
      "adaptiveIcon": {
        "foregroundImage": "src/assets/app/AndroidAdaptiveIcon.png",
        "backgroundColor": "#ffffff"
      },
      "splash": {
        "image": "src/assets/splash/SplashLight.png",
        "resizeMode": "cover",
        "backgroundColor": "#ffffff",
        "dark": {
          "image": "src/assets/splash/SplashDark.png",
          "resizeMode": "cover",
          "backgroundColor": "#1F1F1F"
        }
      },
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "blockedPermissions": [
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_EXTERNAL_STORAGE"
      ]
    },
    "platforms": ["ios", "android"],
    "icon": "src/assets/app/Icon.png",
    "plugins": [
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "This will let to pinpoint your exact location."
        }
      ],
      ["expo-localization"],
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "PORTRAIT_UP"
        }
      ],
      ["react-native-map-link"]
    ],
    "extra": {
      "eas": {
        "projectId": "9352bb3a-6c9e-4b4f-91a7-fd62ee1dcdd5"
      }
    }
  }
}
